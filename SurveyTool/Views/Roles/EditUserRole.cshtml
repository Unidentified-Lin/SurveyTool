
@{
    ViewBag.Title = "修改角色/權限";
}
<div class="page-header">
    <h2>@ViewBag.Title <small>@ViewBag.UserName</small></h2>
</div>

@using (Html.BeginForm("EditUserRole", "Roles"))
{
    <div>
        目前角色/權限：@Html.TextBox("oldRoleName",(string)ViewBag.RoleName, new { @readonly = "readonly" }) <br />
        要修改的角色/權限: @Html.DropDownList("newRoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...")
    </div>
    <input type="hidden" name="UserName" value="@ViewBag.UserName"/>
    <div>
        <input class="btn btn-primary" type="submit" value="儲存" />
        <a class="btn" href="@Url.Action("UserList")">取消</a>
    </div>
}

